{
    "name": "ai-gift-recommender",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "dev:api": "vercel dev",
        "dev:local": "node simple-dev-server.js",
        "dev:full": "concurrently \"npm run dev:local\" \"npm run dev\"",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint . --ext ts,tsx --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
        "type-check": "tsc --noEmit",
        "test": "vitest",
        "test:unit": "vitest run tests/unit",
        "test:integration": "vitest run tests/integration",
        "test:e2e": "playwright test",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:debug": "vitest --inspect-brk",
        "test:ci": "vitest run --coverage --reporter=verbose",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:debug": "playwright test --debug",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:install": "playwright install",
        "test:e2e:report": "playwright show-report",
        "test:all": "npm run test:ci && npm run test:e2e",
        "test:security": "npm audit && snyk test",
        "test:performance": "lighthouse http://localhost:5173 --output=json --output-path=./test-results/lighthouse.json",
        "test:accessibility": "axe-core --dir ./dist --report --output ./test-results/accessibility.json",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate dev",
        "db:studio": "prisma studio",
        "db:reset": "prisma migrate reset",
        "postinstall": "prisma generate"
    },
    "dependencies": {
        "@emailjs/browser": "^4.4.1",
        "@fullcalendar/core": "^6.1.19",
        "@fullcalendar/daygrid": "^6.1.19",
        "@fullcalendar/interaction": "^6.1.19",
        "@fullcalendar/react": "^6.1.19",
        "@fullcalendar/timegrid": "^6.1.19",
        "@google-analytics/data": "^5.2.0",
        "@prisma/client": "^6.14.0",
        "@tinymce/tinymce-react": "^6.3.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.10",
        "@vercel/analytics": "^1.5.0",
        "@vercel/node": "^2.3.0",
        "@vercel/postgres": "^0.10.0",
        "@vitejs/plugin-react": "^4.3.4",
        "autoprefixer": "^10.4.20",
        "bcryptjs": "^3.0.2",
        "chart.js": "^4.5.0",
        "cors": "^2.8.5",
        "date-fns": "^4.1.0",
        "express": "^5.1.0",
        "jsonwebtoken": "^9.0.2",
        "openai": "^5.12.2",
        "postcss": "^8.4.49",
        "prisma": "^6.14.0",
        "react": "^18.3.1",
        "react-chartjs-2": "^5.3.0",
        "react-dom": "^18.3.1",
        "react-router-dom": "^7.6.3",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.2.2",
        "upstash": "^0.0.1",
        "vite": "^7.1.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@playwright/test": "^1.54.2",
        "@tailwindcss/typography": "^0.5.16",
        "@testing-library/jest-dom": "^6.7.0",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@typescript-eslint/eslint-plugin": "^8.37.0",
        "@typescript-eslint/parser": "^8.37.0",
        "@vitest/ui": "^3.2.4",
        "concurrently": "^9.2.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.3",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.7",
        "jsdom": "^26.1.0",
        "vite-plugin-pwa": "^1.0.1",
        "vitest": "^3.2.4"
    },
    "resolutions": {
        "@rollup/rollup-linux-x64-gnu": "1.0.0"
    },
    "overrides": {
        "path-to-regexp": "^6.2.3",
        "esbuild": "^0.25.8"
    }
}
