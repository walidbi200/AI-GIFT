{
  "rewrites": [
    {
      "source": "/((?!api/|.*\\..*).*)",
      "destination": "/"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "functions": {
    "api/blog.ts": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/generate-gifts.ts": {
      "memory": 1024,
      "maxDuration": 30
    },
    "api/auth/login.ts": {
      "memory": 512,
      "maxDuration": 10
    },
    "api/auth/validate.ts": {
      "memory": 512,
      "maxDuration": 10
    },
    "api/subscribe.ts": {
      "memory": 512,
      "maxDuration": 10
    }
  }
}